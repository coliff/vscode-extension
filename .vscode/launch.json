{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "all",
      "configurations": ["server", "client"]
    }
  ],
  "configurations": [
    {
      "name": "client",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/src/client/**/*.js"],
      "preLaunchTask": "npm"
    },
    {
      "name": "server",
      "type": "node",
      "request": "attach",
      "port": 6100,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/src/server/**/*.js"],
      "protocol": "legacy",
      "runtimeArgs": [
        "--debug=6100"
    ]
    }
  ]
}
